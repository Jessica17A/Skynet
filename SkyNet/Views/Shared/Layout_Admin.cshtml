@functions {
    bool IsActive(string controller)
    {
        var rc = ViewContext.RouteData.Values["controller"]?.ToString();
        return string.Equals(rc, controller, StringComparison.OrdinalIgnoreCase);
    }
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SkyNet</title>

    <link rel="stylesheet" href="~/lib/coreui/dist/css/coreui.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- SIDEBAR -->
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
        <div class="sidebar-brand d-none d-md-flex">
            <div class="brand-wrap">
                <img src="~/img/logo-skynet.png" alt="SkyNet" />
                <span class="brand-text">SkyNet</span>
            </div>
        </div>

        <ul class="sidebar-nav" data-coreui="navigation">
            <li class="nav-item">
                <a class="nav-link @(IsActive("Home") ? "active" : "")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i>
                    Dashboard
                    <span class="badge bg-info ms-auto">NEW</span>
                </a>
            </li>


            <li class="nav-title">Operación</li>
            <li class="nav-item">
                <a class="nav-link @(IsActive("ClientesUi") ? "active" : "")" asp-controller="ClientesUi" asp-action="Index">
                    <i class="bi bi-people me-2"></i> Clientes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(IsActive("Visitas") ? "active" : "")" asp-controller="Visitas" asp-action="Index">
                    <i class="bi bi-calendar-check me-2"></i> Visitas
                </a>
            </li>

            <li class="nav-title">Extras</li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="bi bi-file-earmark-text me-2"></i> Pages</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" target="_blank" href="https://coreui.io/docs/"><i class="bi bi-journal-code me-2"></i> Docs</a>
            </li>
        </ul>
    </div>

    <!-- WRAPPER -->
    <div class="wrapper d-flex flex-column min-vh-100 bg-light">

        <!-- HEADER -->
        <header class="header header-sticky mb-4">
            <div class="container-fluid d-flex align-items-center justify-content-between gap-3">
                <button class="header-toggler px-md-0 me-3" type="button"
                        onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
                    <i class="bi bi-list fs-4"></i>
                </button>

                <!-- Breadcrumbs + título -->
                <div class="d-none d-md-block">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                        </ol>
                    </nav>
                </div>



                <!-- Icons -->
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-link text-body" title="Notificaciones"><i class="bi bi-bell fs-5"></i></button>
                    <button class="btn btn-link text-body" title="Mensajes"><i class="bi bi-envelope fs-5"></i></button>



                    <!-- User dropdown -->
                    <div class="dropdown">
                        <a class="d-inline-flex align-items-center text-decoration-none" href="#" data-coreui-toggle="dropdown">
                            <img src="https://i.pravatar.cc/40" class="rounded-circle" width="36" height="36" alt="user" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li class="dropdown-item-text"><strong>@User.Identity?.Name</strong></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Perfil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i> Ajustes</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Subheader opcional -->
            <div class="header-divider"></div>
            <div class="container-fluid">
                <small class="text-muted">Panel de control</small>
            </div>
        </header>

        <!-- BODY -->
        <div class="body flex-grow-1 px-3">
            <div class="container-lg">
                @RenderBody()
            </div>
        </div>

        <!-- FOOTER -->
        <footer class="footer">
            <div><strong>SkyNet</strong> © 2025</div>
            <div class="ms-auto">Hecho con <span class="text-danger">♥</span> y CoreUI</div>
        </footer>
    </div>

    <script src="~/lib/coreui/dist/js/coreui.bundle.min.js"></script>
    <script>
        // Toggle tema claro/oscuro (demo simple)
        document.getElementById('themeToggle')?.addEventListener('click', () => {
          document.documentElement.toggleAttribute('data-coreui-theme');
          // alterna entre claro/oscuro
          const cur = document.documentElement.getAttribute('data-coreui-theme');
          document.documentElement.setAttribute('data-coreui-theme', cur === 'dark' ? 'light' : 'dark');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
