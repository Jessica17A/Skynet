@functions {
    bool IsActive(string controller)
    {
        var rc = ViewContext.RouteData.Values["controller"]?.ToString();
        return string.Equals(rc, controller, StringComparison.OrdinalIgnoreCase);
    }
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyNet</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- CoreUI 5 -->
    <link rel="stylesheet" href="~/lib/coreui/dist/css/coreui.min.css" />

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <!-- Tus estilos -->
    <link rel="stylesheet" href="~/css/customStyles.css" />
</head>
<body>
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:#1c31a5;">
            <div class="container-fluid">
               
                <!-- Botón colapsable -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain"
                        aria-controls="navMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white @(IsActive("LayoutPrincipal") ? "active" : "")"
                               asp-controller="LayoutPrincipal" asp-action="Nosotros">Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(IsActive("LayoutPrincipal") ? "active" : "")"
                               asp-controller="LayoutPrincipal" asp-action="FormularioClientes">Solicitudes</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white @(IsActive("Home") ? "active" : "")"
                               asp-controller="LayoutPrincipal" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Registro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO -->
    <div class="container" style="margin-top:100px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <!-- FOOTER -->
    <footer class="footer bg-light text-center py-3 mt-auto border-top">
        <div class="container">
            <strong>Yeishop</strong> © 2025
        </div>
    </footer> *@

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/coreui/dist/js/coreui.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
