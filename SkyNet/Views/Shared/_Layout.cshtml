@functions {
    bool IsActive(string controller)
    {
        var rc = ViewContext.RouteData.Values["controller"]?.ToString();
        return string.Equals(rc, controller, StringComparison.OrdinalIgnoreCase);
    }
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyNet</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- CoreUI 5 -->
    <link rel="stylesheet" href="~/lib/coreui/dist/css/coreui.min.css" />

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <!-- Tus estilos -->
    <link rel="stylesheet" href="~/css/customStyles.css" />
</head>
<body>
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm fixed-top" style="background-color:#1c31a5;">
            <div class="container-fluid">

                <!-- Botón menú (colapsar sidebar) -->
                <button class="btn btn-outline-light me-3 d-lg-none"
                        type="button"
                        onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
                    <i class="bi bi-list"></i>
                </button>

                <!-- LOGO CENTRADO -->
                <a class="navbar-brand mx-auto d-flex align-items-center text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    @* <img src="~/img/logo.png" alt="Yeishop Logo" style="height:40px; margin-right:8px;" />
            <span class="fw-bold fs-4" style="font-family: 'Sugar Bread', cursive;">Yeishop</span> *@
                </a>

                <!-- Menú derecho -->
                <div class="d-flex align-items-center gap-3">
                    <a class="nav-link fs-4 fw-bold text-white @(IsActive("Home") ? "active" : "")" asp-area="" asp-controller="LayoutPrincipal" asp-action="Index">
                        <i class="bi bi-house me-2 fs-3"></i> Inicio
                    </a>
                    <a class="nav-link fs-4 fw-bold text-white @(IsActive("ClientesUi") ? "active" : "")" asp-area="Identity" asp-page="/Account/Register">
                        <i class="bi bi-person-plus me-2 fs-3"></i> Registro
                    </a>
                    <a class="nav-link fs-4 fw-bold text-white" asp-area="Identity" asp-page="/Account/Login">
                        <i class="bi bi-box-arrow-in-right me-2 fs-3"></i> Login
                    </a>
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>

    </header>

    <!-- CONTENIDO -->
    <div class="container" style="margin-top:100px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <!-- FOOTER -->
    <footer class="footer bg-light text-center py-3 mt-auto border-top">
        <div class="container">
            <strong>Yeishop</strong> © 2025
        </div>
    </footer> *@

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/coreui/dist/js/coreui.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
