@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<style>
    :root {
        --brand: #0d6efd;
        --brand-2: #33bde4;
        --ink: #0f172a;
    }

    /* Card/carrusel */
    .services-carousel {
        position: relative;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 18px 48px rgba(15,23,42,.18);
        border: 1px solid rgba(13,110,253,.12);
    }

    /* Altura fluida (evita huecos en monitores grandes) */
    .carousel-h {
        min-height: clamp(420px, 58vh, 720px);
        height: auto;
    }

    /* Fila del slide: se apila sola cuando no cabe */
    .slide-row {
        height: 100%;
        display: flex;
        flex-wrap: wrap; 
        align-items:center;
        gap: clamp(12px, 3vw, 32px);
        padding: clamp(16px, 3.5vw, 40px);
    }

    /* Columna de imagen: ancho/alto fluidos y proporción estable */
    .slide-image {
        flex: 1 1 clamp(280px, 50%, 620px); /* ocupa ~50%; si no cabe, baja */
        border-radius: 16px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover; /* usa contain si prefieres sin recorte */
        aspect-ratio: 16 / 10; /* mantiene relación */
        min-height: 220px;
        box-shadow: 0 12px 30px rgba(15,23,42,.12);
    }

    /* Columna de contenido: comparte espacio y también se apila */
    .slide-content {
        flex: 1 1 clamp(280px, 46%, 680px);
        background: radial-gradient(90% 120% at 10% 0%, #e8f2ff 0%, #f6fbff 50%, #ffffff 100%);
        padding: clamp(20px, 4vw, 56px);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .slide-inner {
        max-width: 640px;
        width: 100%;
    }

    /* Tipografía y chips fluidos */
    .slide-title {
        color: #0b2447;
        font-weight: 800;
        margin: clamp(10px, 1.2vw, 16px) 0 10px;
        font-size: clamp(1.35rem, 2.2vw, 2.1rem);
    }

    .slide-text {
        color: #334155;
        font-size: clamp(.98rem, 1.2vw, 1.08rem);
    }

    .badge-soft {
        background: linear-gradient(90deg,var(--brand),var(--brand-2));
        color: #fff;
        border-radius: 20px;
        padding: clamp(6px, .9vw, 10px) clamp(10px, 1.2vw, 14px);
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 6px 18px rgba(51,189,228,.35);
        font-size: clamp(.9rem, 1vw, 1rem);
    }

    .mini-tag {
        border: 1px dashed rgba(13,110,253,.25);
        border-radius: 12px;
        padding: 6px 10px;
        background: #fff;
        font-size: clamp(.8rem, 1vw, .9rem);
        display: inline-flex;
        align-items: center;
        gap: 6px;
        margin-right: 6px;
        margin-top: 10px;
    }

    /* Controles/indicadores */
    .carousel-control-prev, .carousel-control-next {
        filter: drop-shadow(0 4px 14px rgba(0,0,0,.25));
        width: min(8%, 64px);
    }

    .carousel-indicators [data-bs-target] {
        background-color: var(--brand);
    }

    /* Marca de agua con tamaño fluido */
    .watermark {
        position: absolute;
        right: -8px;
        bottom: 12px;
        opacity: .08;
        font-size: clamp(48px, 6vw, 100px);
        font-weight: 900;
        color: #0d6efd;
        pointer-events: none;
        line-height: 1;
    }
</style>


<div class="container py-4">
    <section id="servicesCarousel" class="carousel slide services-carousel" aria-label="Presentación de servicios SkyNet">
        <!-- Indicadores -->
        <div class="carousel-indicators">
